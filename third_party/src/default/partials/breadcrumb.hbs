{{#if parent}}
    {{#with parent}}{{> breadcrumb}}{{/with}}
    <li>
        {{#if url}}
            <a href="{{relativeURL url}}">{{removeQuotes name}}</a>
        {{else}}
            <span>{{removeQuotes name}}</span>
        {{/if}}
    </li>
{{else}}
    {{#if url}}
        <li>
            <a href="{{relativeURL url}}">{{ name }}</a>
        </li>
    {{/if}}
{{/if}}
