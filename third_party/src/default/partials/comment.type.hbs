{{~#with comment~}}
    {{~#if shortText~}}
        <span class="tsd-comment tsd-typography tsd-comment-shorttext">
            <span class="lead">
                {{#markdown}}{{{shortText}}}{{/markdown}}
            </span>
        </span>
    {{~/if~}}
    {{~#if text~}}
        <span class="tsd-comment tsd-typography tsd-comment-text">
            {{#markdown}}{{{text}}}{{/markdown}}
        </span>
    {{~/if~}}
    {{~#if tags~}}
        <span class="tsd-comment tsd-typography tsd-comment-tags">
            <dl class="tsd-comment-tags">
                {{~#each tags~}}
                    <dt class="tds-tag-{{tagName}}">{{tagName}}</dt>
                    <dd class="tds-tag-{{tagName}}">{{#markdown}}{{{text}}}{{/markdown}}</dd>
                {{~/each~}}
            </dl>
        </span>
    {{~/if~}}
{{~/with~}}
